   "source": [
    "def remove_spec_char(tweet):\n",
    "    tweet = re.sub(r'@[A-Za-z0-9_]+','',tweet) # remove @mentions\n",
    "    tweet = re.sub(r'#',' ',tweet) # remove #hashtags\n",
    "    return tweet"
   ]
  },
